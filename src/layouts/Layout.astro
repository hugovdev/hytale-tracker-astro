---
import "../styles/main.css";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html
	lang="en"
	class="scroll-smooth bg-gray-200 dark:bg-gray-900 scrollbar-thumb-slate-500 hover:scrollbar-thumb-slate-600 scrollbar-track-rounded-md scrollbar-thumb-rounded-md scrollbar-track-slate-400 scrollbar-thin"
>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<meta
			name="title"
			content="Hytale Tracker 2.0 - Track everything Hytale!"
		/>
		<meta
			name="description"
			content="Track and view everything about Hytale's latest news, blogposts, job openings and more!"
		/>

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://hytale-tracker.vercel.app/" />
		<meta
			property="og:title"
			content="Hytale Tracker 2.0 - Track everything Hytale!"
		/>
		<meta
			property="og:description"
			content="Track and view everything about Hytale's latest news, blogposts, job openings and more!"
		/>
		<meta property="og:image" content="https://i.imgur.com/zFZKcT2.png" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta
			property="twitter:url"
			content="https://hytale-tracker.vercel.app/"
		/>
		<meta
			property="twitter:title"
			content="Hytale Tracker 2.0 - Track everything Hytale!"
		/>
		<meta
			property="twitter:description"
			content="Track and view everything about Hytale's latest news, blogposts, job openings and more!"
		/>
		<meta property="twitter:image" content="https://i.imgur.com/zFZKcT2.png" />

		<link
			rel="preload"
			href="/fonts/poppins-v20-latin-regular.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>

		<link
			rel="preload"
			href="/fonts/poppins-v20-latin-500.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>

		<link
			rel="preload"
			href="/fonts/poppins-v20-latin-700.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>

		<link
			rel="preload"
			href="/fonts/poppins-v20-latin-800.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>

		<link
			rel="preload"
			href="/fonts/poppins-v20-latin-900.woff2"
			as="font"
			type="font/woff2"
			crossorigin
		/>

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html,
	body {
		font-family: "Poppins", sans-serif;
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
